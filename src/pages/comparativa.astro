    buttonLink: "/contacto"
  },
  {
    title: "Plan Premium",
    subtitle: "Para verdaderos conocedores",
    price: "€35",
    priceNote: "por mes",
    badge: "Más popular",
    highlighted: true,
    features: [
      { name: "Café mensual", included: true, value: "500g" },
