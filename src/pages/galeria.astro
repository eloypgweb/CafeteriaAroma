---
import BaseLayout from "../layouts/BaseLayout.astro";
import ImageGallery from "../components/ImageGallery.astro";

// Colección de imágenes de cafés
const cafeImages = [
  {
    src: "https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?w=600&h=600&fit=crop",
    alt: "Taza de café espresso",
    title: "Espresso Perfecto",
    description: "Café italiano con crema dorada"
  },
  {
    src: "https://images.unsplash.com/photo-1509042239860-f550ce710b93?w=600&h=600&fit=crop",
    alt: "Café con arte latte",
    title: "Arte Latte",
    description: "Diseños únicos en cada taza"
  },
  {
    src: "https://images.unsplash.com/photo-1511920170033-f8396924c348?w=600&h=600&fit=crop",
    alt: "Granos de café",
    title: "Granos Premium",
    description: "Origen único y sostenible"
  },
  {
    src: "https://images.unsplash.com/photo-1442512595331-e89e73853f31?w=600&h=600&fit=crop",
    alt: "Cappuccino con espuma",
    title: "Cappuccino Artesanal",
    description: "Espuma perfecta cada vez"
  },
  {
    src: "https://images.unsplash.com/photo-1447933601403-0c6688de566e?w=600&h=600&fit=crop",
    alt: "Café filtrado",
    title: "Café de Filtro",
    description: "Método tradicional japonés"
  },
  {
    src: "https://images.unsplash.com/photo-1514066558159-fc8c737ef259?w=600&h=600&fit=crop",
    alt: "Cold brew",
    title: "Cold Brew",
    description: "Refrescante y suave"
  }
];

// Colección de postres
const dessertImages = [
  {
    src: "https://images.unsplash.com/photo-1464349095431-e9a21285b5f3?w=600&h=600&fit=crop",
    alt: "Tarta arcoíris para fiestas",
    title: "Rainbowcake",
    description: "Cremoso y delicioso"
  },
  {
    src: "https://images.unsplash.com/photo-1578985545062-69928b1d9587?w=600&h=600&fit=crop",
    alt: "Brownie de chocolate",
    title: "Brownie",
    description: "Intenso chocolate negro"
  },
  {
    src: "https://images.unsplash.com/photo-1555507036-ab1f4038808a?w=600&h=600&fit=crop",
    alt: "Croissant francés",
    title: "Croissant",
    description: "Hojaldre artesanal"
  },
  {
    src: "https://images.unsplash.com/photo-1551024601-bec78aea704b?w=600&h=600&fit=crop",
    alt: "Donuts coloridos",
    title: "Donuts",
    description: "Variedad de sabores"
  }
];

// Colección del ambiente de la cafetería
const ambianceImages = [
  {
    src: "https://images.unsplash.com/photo-1554118811-1e0d58224f24?w=600&h=400&fit=crop",
    alt: "Interior acogedor",
    title: "Ambiente Acogedor",
    description: "Diseño moderno y cálido"
  },
  {
    src: "https://images.unsplash.com/photo-1453614512568-c4024d13c247?w=600&h=400&fit=crop",
    alt: "Terraza exterior",
    title: "Terraza Soleada",
    description: "Perfecto para el verano"
  },
  {
    src: "https://images.unsplash.com/photo-1501339847302-ac426a4a7cbb?w=600&h=400&fit=crop",
    alt: "Barra de café",
    title: "Barra Premium",
    description: "Equipamiento profesional"
  },
  {
    src: "https://images.unsplash.com/photo-1442512595331-e89e73853f31?w=600&h=400&fit=crop",
    alt: "Zona de lectura",
    title: "Rincón de Lectura",
    description: "Espacio tranquilo"
  }
];
---

<BaseLayout title="Galería">
  <section class="mb-12">
    <h1>Nuestra Galería</h1>
    <p class="text-xl text-gray-600">Descubre el mundo de Cafetería Aroma a través de imágenes</p>
  </section>

  <!-- Galería de Cafés - Grid 3 columnas -->
  <section class="mb-20">
    <h2>Nuestros Cafés</h2>
    <p class="text-lg text-gray-600 mb-8">Cada taza es una obra de arte</p>
    <ImageGallery 
      images={cafeImages} 
      columns={3}
      aspectRatio="square"
      gap="lg"
      showOverlay={true}
    />
  </section>

  <!-- Galería de Postres - Grid 4 columnas -->
  <section class="mb-20">
    <h2>Repostería Artesanal</h2>
    <p class="text-lg text-gray-600 mb-8">Dulces tentaciones hechas con amor</p>
    <ImageGallery 
      images={dessertImages} 
      columns={4}
      aspectRatio="square"
      gap="md"
      showOverlay={true}
    />
  </section>

  <!-- Galería del Ambiente - Grid 2 columnas con aspecto panorámico -->
  <section class="mb-20">
    <h2>Nuestro Espacio</h2>
    <p class="text-lg text-gray-600 mb-8">Un lugar donde sentirse como en casa</p>
    <ImageGallery 
      images={ambianceImages} 
      columns={2}
      aspectRatio="landscape"
      gap="lg"
      showOverlay={true}
    />
  </section>

  <!-- Galería simple sin overlay -->
  <section class="mb-20 bg-gradient-to-br from-cream-light to-white p-12 rounded-[2rem]">
    <h2>Momentos Especiales</h2>
    <p class="text-lg text-gray-600 mb-8">Capturando la esencia del café</p>
    <ImageGallery 
      images={cafeImages.slice(0, 3)} 
      columns={3}
      aspectRatio="auto"
      gap="md"
      showOverlay={false}
    />
  </section>

  <!-- Call to Action -->
  <section class="text-center my-20 px-8 py-16 bg-gradient-to-br from-primary to-primary-dark rounded-[2rem] text-white">
    <h2 class="text-white mb-4">¿Te gustaría vivir la experiencia?</h2>
    <p class="text-cream text-xl mb-8">Ven y descubre por ti mismo lo que hace especial a Cafetería Aroma</p>
    <a href="/contacto" class="inline-block px-12 py-5 bg-gradient-to-r from-secondary to-secondary-light text-white no-underline font-bold text-xl rounded-full transition-all duration-300 shadow-2xl hover:-translate-y-1 hover:shadow-custom-hover uppercase tracking-wider">
      Visítanos
    </a>
  </section>
</BaseLayout>
