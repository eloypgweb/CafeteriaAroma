  <style>
    .hero {
      text-align: center;
      margin-bottom: 3rem;
    }

    .subtitle {
      font-size: 1.3rem;
      color: #666;
      font-style: italic;
      margin-top: -1rem;
    }

    .contact-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      margin: 4rem 0;
    }

    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .info-card.highlight {
      background: linear-gradient(135deg, white, #faf6f1);
      border-left: 5px solid #d4a574;
    }

    .card-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      text-align: center;
    }

    .info-card h3 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      text-align: center;
      color: #6f4e37;
    }

    .detail {
      font-size: 1.2rem;
      font-weight: 600;
      color: #4a3428;
      margin-bottom: 0.5rem;
      text-align: center;
    }

    .detail a {
      color: #6f4e37;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .detail a:hover {
      color: #d4a574;
    }

    .extra-info {
      font-size: 0.95rem;
      color: #777;
      text-align: center;
      margin-top: 0.8rem;
      line-height: 1.6;
    }

    .map-container {
      position: relative;
    }

    .map-placeholder {
      background: linear-gradient(135deg, #6f4e37, #4a3428);
      height: 100%;
      min-height: 400px;
      border-radius: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: white;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
    }

    .map-icon {
      font-size: 5rem;
      margin-bottom: 1rem;
    }

    .map-placeholder p {
      color: white;
      font-size: 1.3rem;
      margin: 0.5rem;
    }

    .map-text {
      font-style: italic;
      opacity: 0.9;
      font-size: 1rem !important;
    }

    .hours-section {
      margin: 5rem 0;
    }

    .hours-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    .hour-card {
      background: white;
      padding: 2rem;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
      text-align: center;
      transition: transform 0.3s ease;
    }

    .hour-card:hover {
      transform: translateY(-5px);
    }

    .day {
      font-weight: 700;
      font-size: 1.3rem;
      color: #6f4e37;
      margin-bottom: 1rem;
    }

    .time {
      font-size: 1.5rem;
      font-weight: 600;
      color: #4a3428;
      margin: 1rem 0;
    }

    .status {
      display: inline-block;
      padding: 0.5rem 1.5rem;
      border-radius: 20px;
      font-weight: 600;
      margin-top: 1rem;
      text-transform: uppercase;
      font-size: 0.9rem;
      letter-spacing: 1px;
    }

    .status.open {
      background: linear-gradient(135deg, #66bb6a, #4caf50);
      color: white;
    }

    .status.closed {
      background: linear-gradient(135deg, #ef5350, #e53935);
      color: white;
    }

    .social-section {
      margin: 5rem 0;
      text-align: center;
    }

    .social-subtitle {
      font-size: 1.2rem;
      color: #666;
      margin-bottom: 3rem;
    }

    .social-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 2rem;
      max-width: 900px;
      margin: 0 auto;
    }

    .social-card {
      background: white;
      padding: 2.5rem 2rem;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      text-decoration: none;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.8rem;
      transition: all 0.3s ease;
      border: 3px solid transparent;
    }

    .social-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    }

    .social-card.instagram:hover {
      border-color: #e4405f;
    }

    .social-card.facebook:hover {
      border-color: #1877f2;
    }

    .social-card.twitter:hover {
      border-color: #1da1f2;
    }

    .social-icon {
      font-size: 3rem;
    }

    .social-name {
      font-weight: 700;
      font-size: 1.3rem;
      color: #6f4e37;
    }

    .social-handle {
      color: #999;
      font-size: 0.95rem;
    }

    .faq-section {
      margin: 5rem 0;
      background: linear-gradient(135deg, #faf6f1, #fff);
      padding: 3rem;
      border-radius: 25px;
    }

    .faq-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 3rem;
    }

    .faq-item {
      background: white;
      padding: 2rem;
      border-radius: 15px;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease;
    }

    .faq-item:hover {
      transform: scale(1.05);
    }

    .faq-item h3 {
      font-size: 1.2rem;
      margin-bottom: 1rem;
      color: #6f4e37;
    }

    .faq-item p {
      font-size: 1rem;
      color: #666;
      line-height: 1.6;
      text-align: left;
    }

    .cta-contact {
      text-align: center;
      margin: 5rem 0;
      padding: 4rem 2rem;
      background: linear-gradient(135deg, #6f4e37, #4a3428);
      border-radius: 30px;
      color: white;
    }

    .cta-contact h2 {
      color: white;
      margin-bottom: 1rem;
    }

    .cta-contact h2::after {
      background: linear-gradient(90deg, #c4a572, #d4a574);
    }

    .cta-contact > p {
      color: #f0e6d2;
      font-size: 1.3rem;
      margin-bottom: 2.5rem;
    }

    .cta-buttons {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .cta-btn {
      display: inline-block;
      padding: 1.2rem 3rem;
      text-decoration: none;
      font-weight: 700;
      font-size: 1.1rem;
      border-radius: 50px;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .cta-btn.primary {
      background: linear-gradient(135deg, #c4a572, #d4a574);
      color: white;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .cta-btn.primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
    }

    .cta-btn.secondary {
      background: white;
      color: #6f4e37;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .cta-btn.secondary:hover {
      transform: translateY(-3px);
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.25);
      background: #faf6f1;
    }

    @media (max-width: 768px) {
      .contact-grid {
        grid-template-columns: 1fr;
      }

      .map-placeholder {
        min-height: 300px;
      }

      .cta-buttons {
        flex-direction: column;
        align-items: center;
      }

      .cta-btn {
        width: 100%;
        max-width: 300px;
      }
    }
  </style>
</BaseLayout>
